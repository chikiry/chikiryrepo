<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.novelasstream"
       name="[COLOR red]Novelas Stream[/COLOR]" 
       version="0.0.2"
       provider-name="Chikiry">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.beautifulsoup" version="3.2.1"/>
    <import addon="script.module.simple.downloader" version="0.9.4"/>
    <import addon="script.module.beautifulsoup4" />
    <import addon="script.module.requests" />
    <import addon="script.module.httplib2" />
    <import addon="script.module.liveresolver" version="0.1.24" optional="true"/>
    <import addon="script.module.youtube.dl" optional="true"/>
    <import addon="plugin.video.youtube" />
	<import addon="plugin.video.dailymotion_com" />
	<import addon="script.module.resolveurl" />
    <import addon="script.module.inputstreamhelper" optional="true"/>  
    <import addon="script.module.livestreamer" optional="true"/>
    <import addon="script.module.slproxy" optional="true"/>
	<import addon="script.module.simplejson" />
    <import addon="script.module.livestreamer" optional="true"/>
    <import addon="script.module.pyamf" optional="true"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video audio</provides>
  </extension> 
  
  <extension point="xbmc.addon.repository" name="chikiryrepo">
        <info>https://raw.githubusercontent.com/chikiry/chikiryrepo/master/Repositorio/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/chikiry/chikiryrepo/master/Repositorio/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/chikiry/chikiryrepo/master/Repositorio/</datadir>
    </extension>
  
  <extension point="xbmc.addon.metadata">
    <summary>Creado por Chikiry y equipo</summary>
    <description>Addon dedicado al mundo de la telenovela a nivel mundial, agradecimientos a el equipo de Cristal Azul, Bojbit por sus logos y a todo el equipo de Chikiry</description>
    <platform>all</platform>
	  <assets>
		<icon>icon.png</icon>
		<fanart>fanart.jpg</fanart>
	  </assets>
  </extension>
</addon>
