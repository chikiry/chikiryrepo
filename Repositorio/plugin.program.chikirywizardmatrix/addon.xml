<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.chikirywizardmatrix" name="[COLOR gold]Chikiry Wizard[COLOR white] Matrix[/COLOR]" version="0.0.2" provider-name="chikiry">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
	
	<extension point="xbmc.addon.repository" name="chikiryrepo">
        <info>https://raw.githubusercontent.com/chikiry/chikiryrepo/master/Repositorio/addons.xml</info>
        <checksum>https://raw.githubusercontent.com/chikiry/chikiryrepo/master/Repositorio/addons.xml.md5</checksum>
        <datadir zip="true">https://raw.githubusercontent.com/chikiry/chikiryrepo/master/Repositorio/</datadir>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
    <summary lang="en">Wizard</summary>
    <description lang="en">chikiry wizard canal de telegram para Novedades y consultas @consultaschikiry.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        

        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>



